{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "projects": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "properties": {
            "path": {
              "type": "string",
              "description": "Path to the project",
              "default": "./package.json"
            },
            "tasks": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "commit",
                  "push",
                  "tag",
                  "execute"
                ],
                "uniqueItems": true
              },
              "description": "Tasks to execute"
            },
            "commit_message": {
              "type": "string",
              "description": "Commit message to use when `commit` is set",
              "default": "chore: release v"
            },
            "tag_prefix": {
              "type": "string",
              "description": "Tag prefix to use when `tasks.tag` is set",
              "default": "v"
            },
            "execute": {
              "type": "string",
              "description": "Execute a command before commiting"
            }
          },
          "required": [
            "path",
            "tasks"
          ]
        }
      }
    }
  },
  "required": [
    "projects"
  ]
}
