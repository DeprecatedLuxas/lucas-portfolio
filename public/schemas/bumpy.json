{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "projects": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "properties": {
            "path": {
              "type": "string",
              "description": "Path to the project"
            },
            "tasks": {
              "type": "array",
              "enum": [
                "commit",
                "push",
                "tag",
                "execute"
              ],
              "description": "Tasks to execute"
            },
            "commit_message": {
              "type": "string",
              "description": "Commit message to use when `commit` is set"
            },
            "tag_prefix": {
              "type": "string",
              "description": "Tag prefix to use when `tasks.tag` is set"
            },
            "execute": {
              "type": "string",
              "description": "Execute a command before commiting"
            }
          }
        }
      }
    }
  }
}
