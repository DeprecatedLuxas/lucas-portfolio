{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "projects": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "properties": {
            "path": {
              "type": "string",
              "description": "Path to the project"
            },
            "tasks": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "commit",
                  "push",
                  "tag",
                  "execute"
                ]
              },
              "description": "Tasks to execute"
            },
            "commit_message": {
              "type": "string",
              "description": "Commit message to use when `commit` is set"
            },
            "tag_prefix": {
              "type": "string",
              "description": "Tag prefix to use when `tasks.tag` is set"
            },
            "execute": {
              "type": "string",
              "description": "Execute a command before commiting"
            }
          }
        }
      }
    }
  },
  "required": [
    "projects"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "projects": {
            "patternProperties": {
              ".*": {
                "properties": {
                  "tasks": {
                    "contains": {
                      "enum": [
                        "commit"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "projects": {
            "patternProperties": {
              ".*": {
                "required": [
                  "commit_message"
                ]
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "projects": {
            "patternProperties": {
              ".*": {
                "properties": {
                  "tasks": {
                    "contains": {
                      "enum": [
                        "execute"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "projects": {
            "patternProperties": {
              ".*": {
                "required": [
                  "execute"
                ]
              }
            }
          }
        }
      }
    },
     {
      "if": {
        "properties": {
          "projects": {
            "patternProperties": {
              ".*": {
                "properties": {
                  "tasks": {
                    "contains": {
                      "enum": [
                        "tag"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "projects": {
            "patternProperties": {
              ".*": {
                "required": [
                  "tag_prefix"
                ]
              }
            }
          }
        }
      }
    }
  ]
}
