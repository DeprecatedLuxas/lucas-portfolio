---
import type {
  HTMLTag,
  Polymorphic,
} from "astro/types";

import Link from "./Link.astro";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
  href?: string
};

const { as: Element = "div", href, class: _class, ...props } = Astro.props;
---

{
  !href ? (
    <Element
      class:list={[
        "h-full border border-transparent hover:(border-neutral-700) rounded p-4 text-neutral-800 dark:text-neutral-200",
        _class,
      ]}
      {...props}
    >
      <slot />
    </Element>
  ) : (
    <Link
      class:list={[
        "h-full border border-transparent hover:(border-neutral-700) rounded p-4 text-neutral-800 dark:text-neutral-200",
        _class,
      ]}
      {...props}
      {href}
    >
      <slot />
    </Link>
  )
}
