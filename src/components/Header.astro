---
import Link from '#/components/Link.astro';
const { pathname } = Astro.url;
---

<header>
  <nav
    class="flex items-center justify-between w-full relative mx-auto py-8 px-4 text-gray-900 bg-opacity-60 dark:text-gray-100"
  >
    <div>
      <Link
        href="/"
        class={`inline-block px-3 py-2 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-800 ${
          pathname === '/'
            ? 'font-semibold text-gray-800 dark:text-gray-200'
            : 'font-normal text-gray-600 dark:text-gray-400'
        }`}>Home</Link
      >
      <Link
        href="/test"
        class={`inline-block px-3 py-2 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-800 ${
          pathname === '/test'
            ? 'font-semibold text-gray-800 dark:text-gray-200'
            : 'font-normal text-gray-600 dark:text-gray-400'
        }`}>Test</Link
      >
    </div>
  </nav>
</header>

<hr class="border-t-2 border-t-gray-300 dark:border-t-gray-800 mb-12" />
