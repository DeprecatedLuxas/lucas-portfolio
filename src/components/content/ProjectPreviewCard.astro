---
import Link from "../ui/Link.astro"
import type { Project } from "../../lib/types"

export interface Props {
  project: Project
}

const {
  project,
} = Astro.props

const {
  name,
  description,
  url: githubUrl,
  isContributor,
} = project

const url = project?.readme ? `/projects/${name}` : githubUrl;
---

<Link href={url} class="flex flex-col justify-between border border-neutral-600 bg-neutral-800 rounded p-3 gap-3">
  <span>
    {name}
    {isContributor && (
      <span class="text-sm"> (contributor)</span>
    )}
  </span>
  <span>{description}</span>
</Link>
