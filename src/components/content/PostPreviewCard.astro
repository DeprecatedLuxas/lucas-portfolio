---
import type { CollectionEntry } from "astro:content"

import Link from "../ui/Link.astro"

export function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  })
}

export interface Props {
  post: CollectionEntry<"posts">
}

const {
  post: {
    data: { title, description, date },
    slug,
  },
} = Astro.props;
---

<Link href={`/posts/${slug}`} class="flex flex-col justify-between border border-neutral-300 bg-neutral-100 dark:(border-neutral-700 bg-neutral-800) rounded p-3 gap-3">
  <span class="text-(lg imp) font-semibold">{title}</span>
  <span>{description}</span>
  <span>{formatDate(date)}</span>
</Link>
