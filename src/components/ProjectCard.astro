---
import type { Project } from "~/types";

export type Props = {
  project: Project;
};
const { name, description, language, url } = Astro.props.project;
---

<a href={url} target="_blank" rel="noopener noreferrer">
  <div
    h-36
    flex
    flex-col
    justify-between
    gap-y-2
    border
    border-gray-700
    p-4
    rounded-xl
    text-gray-200
    hover:bg-gray-800>
    <div flex flex-col gap-y-2>
      <span text-xl font-medium text-ellipsis whitespace-nowrap overflow-hidden
        >{name}</span
      >
      <p text-sm>{description}</p>
    </div>
    {
      language && (
        <div flex items-center gap-x-2 text-sm>
          <span
            underline
            decoration-wavy
            underline-offset-4
            style={{
              textDecorationColor: language.color
            }}>
            {language.name}
          </span>
        </div>
      )
    }
  </div>
</a>
