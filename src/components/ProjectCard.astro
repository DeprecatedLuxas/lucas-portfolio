---
import type { Project } from "../types";
import Card from "./Card.astro";

export interface Props {
  project: Project
}
const { name, description, language, url } = Astro.props.project;
---

<Card href={url} class="flex flex-col justify-between gap-y-2">
  <div class="flex flex-col gap-y-2">
    <span class="overflow-hidden text-ellipsis whitespace-nowrap">{name}</span>
    <p class="text-sm">{description}</p>
  </div>
  {
    language && (
      <div class="flex items-center gap-x-2">
        <span
          class="underline decoration-[--language-color] underline-offset-4 decoration-wavy"
          style={{
            "--language-color": language.color,
          }}
        >
          {language.name}
        </span>
      </div>
    )
  }
</Card>
