---
export interface Props {
  href?: string
  class?: string
  component?: string
}
const { href, class: clazz, component } = Astro.props;

const Component = component || href ? "a" : "div";
const props = href
  ? { href, target: "_blank", rel: "noopener noreferrer" }
  : {};
---

<Component
  {...props}
  class:list={[
    "h-full min-h-36 hover:(border border-neutral-700) rounded p-4 text-neutral-800 dark:text-neutral-200",
    clazz,
  ]}
>
  <slot />
</Component>
