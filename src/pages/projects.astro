---
import ProjectCard from "~/components/ProjectCard.astro";
import Layout from "~/layouts/PageLayout.astro";
import { getProfile } from "~/utils/projects";

const projects = await getProfile("luxass");

for (let i = projects.length - 1; i > 0; i--) {
  const j = Math.floor(Math.random() * (i + 1));
  [projects[i], projects[j]] = [projects[j], projects[i]];
}
---

<Layout title="Projects | luxass.dev">
  <section
    flex flex-col items-start justify-center max-w-2xl mx-auto mb-16>
    <h1 mb-4 text-3xl font-bold tracking-tight md:text-5xl text-white>
      Projects
    </h1>
    <p mb-4 text-gray-400>
      These are some of my projects, I&apos;ve been working on.
    </p>
  </section>
  <section grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 gap-4 mb-4>
    {projects && projects.map((project) => <ProjectCard project={project} />)}
  </section>
</Layout>
