---
import ProjectCard from "~/components/ProjectCard.astro";
import Layout from "~/layouts/PageLayout.astro";
import { getProfile } from "~/utils/projects";

let projects = await getProfile("luxass");

for (let i = projects.length - 1; i > 0; i--) {
  const j = Math.floor(Math.random() * (i + 1));
  [projects[i], projects[j]] = [projects[j], projects[i]];
}
---

<Layout title="Home | luxass.dev">
  <section class="flex flex-col-reverse sm:flex-row items-start">
    <div class="flex-1 flex flex-col pr-8 min-h-200px">
      <h1 class="font-bold text-3xl md:text-5xl tracking-tight mb-2">
        Hey I&apos;m luxass <span>✌️</span>
      </h1>
      <p class="text-gray-200 flex-1">
        I&apos;m a self-taught developer based in Grenaa, Denmark. <br />
        In my spare time I enjoy learning new technologies and working on side projects.
      </p>
      <div
        class="mt-12 w-30 font-normal text-gray-400 inline-block px-3 py-2 rounded-lg bg-gray-800 flex justify-between">
        <a href="https://github.com/luxass" target="_blank" class="hover:text-white">
          <div class="i-carbon:logo-github"></div>
        </a>
        <a
          href="https://www.linkedin.com/in/lucasnrgaard/"
          target="_blank"
          class="hover:text-white">
          <div class="i-carbon:logo-linkedin"></div>
        </a>
        <a
          href="mailto:lucasnrgaard@gmail.com"
          target="_blank"
          class="hover:text-white">
          <div class="i-carbon:email"></div>
        </a>
      </div>
    </div>
  </section>
  <section class="mt-8">
    <h2 class="text-3xl">Some of my projects, I&apos;ve been working on.</h2>
    <div class="mt-4 grid grid-cols-1 gap-4 auto-cols-max sm:grid-cols-2 sm:gap-3">
      {projects && projects.map((project) => <ProjectCard project={project} />)}
    </div>
  </section>
</Layout>
