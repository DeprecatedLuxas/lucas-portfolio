---
import { getCollection } from "astro:content";
import PageLayout from "../../layouts/PageLayout.astro";
import PostCard from "../../components/content/PostCard.astro";

const posts = await getCollection("posts", ({ data }) => data.published).then((posts) => posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime()));

export const prerender = true;
---

<PageLayout title="posts | luxass.dev" description="luxass' blog">
  <h1>Posts</h1>
  <p>This is my blog, where I write about things I find interesting.</p>
    {
      posts.length > 0 ? (
        <div class="not-prose grid auto-cols-max grid-cols-1 mt-4 gap-4 sm:grid-cols-2 sm:gap-3">
          {posts.map((post) => (
              <PostCard post={post} />
          ))}
        </div>
      ) : (
        <p>I didn't write any public available posts yet.</p>
      )
    }
</PageLayout>
